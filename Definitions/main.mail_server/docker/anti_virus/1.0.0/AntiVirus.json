{
  "software": [
    {
      "name": "Mail server stack: ClamAV",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "conditionCheck",
            "value": "{{SERVICE.ANTI_VIRUS.NAME}}"
          },
          {
            "type": "deploy",
            "value": "main.mail_server/docker/anti_virus:1.0.0@:{{DOCKER.HOME}}/ClamAV"
          },
          {
            "type": "deploy",
            "value": "{{SYSTEM.HOME}}/Core/Utils:{{DOCKER.HOME}}/ClamAV/Utils"
          },
          {
            "type": "stack",
            "value": "{{DOCKER.HOME}}/ClamAV"
          },
          {
            "type": "check",
            "value": "{{SERVICE.ANTI_VIRUS.NAME}}"
          },
          {
            "type": "command",
            "value": "ln {{DOCKER.HOME}}/ClamAV/antivirus.service /etc/systemd/system/antivirus.service"
          },
          {
            "type": "command",
            "value": "sh {{SERVER.HOME}}/Utils/setenforce.sh"
          },
          {
            "type": "command",
            "value": "systemctl enable antivirus.service"
          },
          {
            "type": "reboot",
            "value": "480"
          },
          {
            "type": "check",
            "value": "{{SERVICE.ANTI_VIRUS.NAME}}"
          }
        ]
      }
    }
  ]
}