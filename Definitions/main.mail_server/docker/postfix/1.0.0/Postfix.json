{
  "software": [
    {
      "name": "Mail server stack: Postfix",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "conditionCheck",
            "value": "{{SERVICE.MAIL_SEND.NAME}}"
          },
          {
            "type": "command",
            "value": "postfix status && postfix stop && systemctl disable postfix || true"
          },
          {
            "type": "portRequired",
            "value": "465"
          },
          {
            "type": "portCheck",
            "value": "{{SERVICE.DATABASE.PORTS.PORT_EXPOSED}}"
          },
          {
            "type": "deploy",
            "value": "main.mail_server/docker/postfix:1.0.0@:{{DOCKER.HOME}}/Postfix"
          },
          {
            "type": "deploy",
            "value": "{{SYSTEM.HOME}}/Core/Utils:{{DOCKER.HOME}}/Postfix/Utils"
          },
          {
            "type": "database",
            "value": "{{DOCKER.HOME}}/Postfix/Database"
          },
          {
            "type": "tlsCertificate",
            "value": "{{SERVER.HOSTNAME}}"
          },
          {
            "type": "stack",
            "value": "{{DOCKER.HOME}}/Postfix"
          },
          {
            "type": "check",
            "value": "{{SERVICE.MAIL_SEND.NAME}}"
          },
          {
            "type": "portCheck",
            "value": "465"
          },
          {
            "type": "command",
            "value": "ln {{DOCKER.HOME}}/Postfix/sendmail.service /etc/systemd/system/sendmail.service"
          },
          {
            "type": "command",
            "value": "sh {{SERVER.HOME}}/Utils/setenforce.sh"
          },
          {
            "type": "command",
            "value": "systemctl enable sendmail.service"
          },
          {
            "type": "reboot",
            "value": "480"
          },
          {
            "type": "check",
            "value": "{{SERVICE.MAIL_SEND.NAME}}"
          },
          {
            "type": "portCheck",
            "value": "465"
          }
        ]
      }
    }
  ]
}