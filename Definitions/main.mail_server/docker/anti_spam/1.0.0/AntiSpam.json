{
  "software": [
    {
      "name": "Mail server stack: Rspamd",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "conditionCheck",
            "value": "{{SERVICE.ANTI_SPAM.NAME}}"
          },
          {
            "type": "portRequired",
            "value": "{{SERVICE.ANTI_SPAM.PORTS.WEBUI_EXPOSED}}"
          },
          {
            "type": "deploy",
            "value": "main.mail_server/docker/anti_spam:1.0.0@:{{DOCKER.HOME}}/Rspamd"
          },
          {
            "type": "deploy",
            "value": "{{SYSTEM.HOME}}/Core/Utils:{{DOCKER.HOME}}/Rspamd/Utils"
          },
          {
            "type": "stack",
            "value": "{{DOCKER.HOME}}/Rspamd"
          },
          {
            "type": "check",
            "value": "{{SERVICE.ANTI_SPAM.NAME}}"
          },
          {
            "type": "command",
            "value": "ln {{DOCKER.HOME}}/Rspamd/antispam.service /etc/systemd/system/antispam.service"
          },
          {
            "type": "command",
            "value": "sh {{SERVER.HOME}}/Utils/setenforce.sh"
          },
          {
            "type": "command",
            "value": "systemctl enable antispam.service"
          },
          {
            "type": "reboot",
            "value": "480"
          },
          {
            "type": "check",
            "value": "{{SERVICE.ANTI_SPAM.NAME}}"
          }
        ]
      }
    }
  ]
}