{
  "software": [
    {
      "name": "Mail server stack: Dovecot",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "conditionCheck",
            "value": "{{SERVICE.MAIL_RECEIVE.NAME}}"
          },
          {
            "type": "command",
            "value": "systemctl status dovecot && systemctl stop dovecot && systemctl disable dovecot || true"
          },
          {
            "type": "portRequired",
            "value": "{{SERVICE.MAIL_RECEIVE.PORTS.PORT_EXPOSED_IMAPS}}"
          },
          {
            "type": "portCheck",
            "value": "{{SERVICE.DATABASE.PORTS.PORT_EXPOSED}}"
          },
          {
            "type": "deploy",
            "value": "main.mail_server/docker/dovecot:1.0.0@:{{DOCKER.HOME}}/Dovecot"
          },
          {
            "type": "deploy",
            "value": "{{SYSTEM.HOME}}/Core/Utils:{{DOCKER.HOME}}/Dovecot/Utils"
          },
          {
            "type": "tlsCertificate",
            "value": "{{SERVER.HOSTNAME}}"
          },
          {
            "type": "stack",
            "value": "{{DOCKER.HOME}}/Dovecot"
          },
          {
            "type": "check",
            "value": "{{SERVICE.MAIL_RECEIVE.NAME}}"
          },
          {
            "type": "portCheck",
            "value": "{{SERVICE.MAIL_RECEIVE.PORTS.PORT_EXPOSED_IMAPS}}"
          },
          {
            "type": "command",
            "value": "ln {{DOCKER.HOME}}/Dovecot/receivemail.service /etc/systemd/system/receivemail.service"
          },
          {
            "type": "command",
            "value": "sh {{SERVER.UTILS_HOME}}/setenforce.sh"
          },
          {
            "type": "command",
            "value": "systemctl enable receivemail.service"
          },
          {
            "type": "reboot",
            "value": "480"
          },
          {
            "type": "check",
            "value": "{{SERVICE.MAIL_RECEIVE.NAME}}"
          },
          {
            "type": "portCheck",
            "value": "{{SERVICE.MAIL_RECEIVE.PORTS.PORT_EXPOSED_IMAPS}}"
          }
        ]
      }
    }
  ]
}