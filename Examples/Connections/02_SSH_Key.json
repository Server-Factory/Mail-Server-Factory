{
  "connection": {
    "type": "SSH",
    "host": "mail.example.com",
    "port": 22,
    "credentials": {
      "username": "mailserver",
      "keyPath": "/home/user/.ssh/id_rsa",
      "comment": "SSH key authentication (more secure than password)"
    },
    "options": {
      "timeout": 120,
      "retries": 3,
      "strictHostKeyChecking": true,
      "compression": false
    }
  },
  "description": "SSH connection with key-based authentication",
  "use_cases": [
    "Automated deployments",
    "CI/CD pipelines",
    "Enhanced security"
  ],
  "setup": {
    "generate_key": "ssh-keygen -t rsa -b 4096 -f ~/.ssh/mailserver_key",
    "copy_to_server": "ssh-copy-id -i ~/.ssh/mailserver_key.pub mailserver@mail.example.com",
    "test_connection": "ssh -i ~/.ssh/mailserver_key mailserver@mail.example.com"
  }
}
