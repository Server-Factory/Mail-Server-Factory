{
  "connection": {
    "type": "WINRM",
    "host": "windows-mail.example.com",
    "port": 5985,
    "credentials": {
      "username": "Administrator",
      "password": "encrypted:AES256:IV:salt:adminpass",
      "comment": "Use port 5986 for HTTPS"
    },
    "options": {
      "timeout": 180,
      "retries": 3,
      "properties": {
        "useHttps": "false",
        "authType": "NTLM"
      }
    }
  },
  "description": "Windows Remote Management connection",
  "use_cases": [
    "Windows Server deployments",
    "Exchange Server",
    "IIS mail servers",
    "Active Directory integration"
  ],
  "setup": {
    "enable_winrm": "winrm quickconfig",
    "allow_unencrypted": "winrm set winrm/config/service @{AllowUnencrypted=\"true\"}",
    "configure_auth": "winrm set winrm/config/service/auth @{Basic=\"true\"}"
  },
  "ports": {
    "5985": "HTTP",
    "5986": "HTTPS (recommended for production)"
  },
  "auth_methods": ["Basic", "NTLM", "Kerberos"]
}
